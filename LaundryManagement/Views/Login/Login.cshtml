
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Laundry - Login Form</title>
    @*<link href="~/Content/Common.css" rel="stylesheet" />*@
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <style>
        .containerstyle {
            padding-top: 98px;
            height: 50px;
            width: 800px;
            
        }
    </style>
</head>
<body>


    <div class="container containerstyle">
        <div style="background-color: burlywood;padding-top:50px;padding-left:123px;padding-bottom:50px;">
            <form action="~/Login/Login" method="post">
                <div class="row" style="padding-bottom:5px;">
                    <div class="col-md-3">
                        <label for="uname"><b>EmailId</b></label>
                    </div>
                    <div class="col-md-4">
                        <input type="text" placeholder="Enter Email" name="EmpEmail" required class="form-control">
                    </div>
                    <div class="col-md-5">

                    </div>
                </div>
                <div class="row" style="padding-bottom:5px;">
                    <div class="col-md-3">
                        <label for="uname"><b>Password</b></label>
                    </div>
                    <div class="col-md-4">
                        <input type="password" placeholder="Enter Password" name="password" required class="form-control">
                    </div>
                    <div class="col-md-5">
                    </div>
                </div>
                <div class="row" style="padding-bottom:5px;">
                    <div class="col-md-3">

                    </div>
                    <div class="col-md-4">
                        <input type="submit" value="Login" class="btn btn-success" />
                    </div>
                    <div class="col-md-5">
                    </div>
                </div>
            </form>
        </div>
    </div>


</body>
</html>
<script src="~/Scripts/bootstrap.min.js"></script>