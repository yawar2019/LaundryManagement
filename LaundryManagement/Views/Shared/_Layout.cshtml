            </div>

            <div class="col-sm-9">
                    <div class="col-sm-12">
                        
                         @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    

    <footer class="container-fluid" style="background-color:black;color:white;">
        <p>Footer Text</p>
    </footer>

</body>
